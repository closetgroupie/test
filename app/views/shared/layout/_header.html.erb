<header id="header">
    <div id="title-bar">
        <div id="title-bar-inner">
            <a href="/" id="logo"></a>
            <% if current_user %>
            <div id="user-actions">
                <%= link_to "Sell your items", new_item_path, id: "sell-button" %>
                <div class="divider"></div>
                <%= link_to "Favorites", favorites_path, :class => "status-icon", id: "favorite" %>
                <div class="divider"></div>
                <%= link_to "Cart", cart_path, :class => "status-icon", id: "cart" %>
                <% if current_cart.has_items? %>
                <span id="cart_count"><%= current_cart.item_count %></span>
                <% end %>
                <div class="divider"></div>
                <%= link_to settings_profile_path, id: "user-context" do %>
                    <span>Hi, <%= current_user.name %>!</span>
                    <% if current_user.new_messages? %>
                    <span id="new-messages-count"><%= current_user.new_messages_count %></span>
                    <% else %>
                    <b class="caret"></b>
                    <% end %>
                <% end %>
                <ul id="user-context-menu" class="top_subnav">
                    <li><%= link_to messages_text, conversations_path %></li>
                    <li><%= link_to "Your Closet", closet_path(current_user.closet) %></li>
                    <li><%= link_to "Find Friends", friends_path %></li>
                    <li class="spacer"><hr /></li>
                    <li><%= link_to "Profile", settings_profile_path %></li>
                    <li><%= link_to "Dashboard", settings_profile_path %></li>
                    <li><%= link_to "Logout", logout_path %></li>
                </ul>
            </div>
            <% else %>
            <%# <p>Turn your closet into a boutique. <a target="_blank" href="http://closetgroupie.tumblr.com/post/14817936131/how-closet-groupie-works">See how it works.</a></p> %>
            <ul id="guest">
                <li class="signin"><%= link_to "Sign In", login_path, :class => "btn btn-signin" %></li>
                <li> or </li>
                <li class="join"><%= link_to "Join now", signup_path, :class => "btn btn-join" %></li>
            </ul>
            <% end %>
        </div>
    </div><!-- end #title-bar -->
    <div id="main-nav">
        <div id="nav-inner">
            <ul id="shop_by">
                <li><%= link_to_unless_current "Women",  {controller: :shop, action: :show, segment: "women"} %></li>
                <li><%= link_to_unless_current "Girls",  {controller: :shop, action: :show, segment: "girls"} %></li>
                <li><%= link_to_unless_current "Boys",   {controller: :shop, action: :show, segment: "boys"} %></li>
                <li><%= link_to_unless_current "Babies", {controller: :shop, action: :show, segment: "babies"} %></li>
            </ul>
            <%= form_tag search_path, id: "search", method: :get do %>
                <%= text_field_tag :q, nil, id: "search_query" %>
                <%= submit_tag "Search", id: "search_submit" %>
                <%# <input class="searchsubmit" id="searchsubmit" type="submit" name="searchsubmit" value="Search" /> %>
            <% end %>
        </div>
    </div><!-- end #nav -->
    <%= yield :header %>
</header>
