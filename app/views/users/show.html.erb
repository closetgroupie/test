<% body_class "closet-details user-profile" %>
<%= profile_for(@user) %>
<section class="main">
    <div>
        <div class="header">
            <h1>
                <%= @user.name %>'s Profile
                <%= link_to("Edit", settings_profile_path) if @user == current_user %>
            </h1>
        </div>
        <div class="contents clearfix">
            <dl>
                <% present @user do |user| %>
                <dt>Location</dt>
                <dd><%= user.location %></dd>
                <dt>Website</dt>
                <dd><%= user.website %></dd>
                <% if false %>
                <dt>Facebook</dt>
                <dd><%= user.facebook %></dd>
                <% end %>
                <% if false %>
                <dt>Twitter</dt>
                <dd></dd>
                <% end %>
                <dt>Biography</dt>
                <dd><%= user.biography %></dd>
                <dt>Member Since</dt>
                <dd><%= user.member_since %></dd>
                <% end %>
            </dl>
        </div>
    </div>
</section>
